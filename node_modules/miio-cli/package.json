{
  "name": "miio-cli",
  "version": "0.1.0",
  "description": "CLI tool to send commands to Xiaomi devices using miio/miot protocols",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src",
    "lint": "tsc --noEmit && eslint --ext ts src",
    "exec": "ts-node src/index.ts",
    "watch": "tsc --watch"
  },
  "author": "russtone",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "miio-api": "^0.4.1",
    "yargs": "^16.2.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "xiaomi",
    "miio",
    "miot",
    "cli"
  ],
  "bin": {
    "miio-cli": "./dist/index.js"
  }
}
